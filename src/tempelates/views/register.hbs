<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    {{>header}}
    <h1>Register</h1>
    {{>navbar}}
    <section class="container">
        <form action="/register" method="POST">
            <div class="form-group display-flex">
              <input type="text" name="firstName" class="form-control" id="fname" aria-describedby="emailHelp" placeholder="First Name">

              <input type="text" name="lastName" class="form-control" id="lname" placeholder="Last Name">
            </div>
            <div class="form-group">
            <input type="text" name="email" class="form-control" id="email" placeholder="Your Email">
            <div class="gender">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="gender" id="gridRadios1" value="male" checked>
                    <label class="form-check-label" for="gridRadios1">
                      Male
                    </label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="gender" id="gridRadios2" value="female">
                    <label class="form-check-label" for="gridRadios2">
                      Female
                    </label>
                  </div>
            </div>
        </div>
            <div class="form-group display-flex">
                <input type="text" name="phone" class="form-control" id="fname" aria-describedby="emailHelp" placeholder="Your Phone">
  
                <input type="text" name="age" class="form-control" id="lname" placeholder="Your age">
              </div>
              <div class="form-group display-flex">
                <input type="text" name="password" class="form-control" id="fname" aria-describedby="emailHelp" placeholder="Password">
  
                <input type="text" name="cpassword" class="form-control" id="lname" placeholder="Confirm Password">
              </div>
            
            <button type="submit" class="btn btn-primary" value="Register">Submit</button>
          </form>
    </section>

    <!-- Required Javascript -->
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
</body>
</html>